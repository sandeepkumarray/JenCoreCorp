             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" xmlns:local="clr-namespace:JENCORECORP"
             Height="300" Width="300">
    <local:UserControlClass.Background>
        <SolidColorBrush />
    </local:UserControlClass.Background>
    <Grid>
        <Ellipse Name="centerel">
