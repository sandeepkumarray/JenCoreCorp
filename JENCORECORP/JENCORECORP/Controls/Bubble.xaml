        </Ellipse>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Height="30" Width="auto" Name="txtHeader" Foreground="Black"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="5" Grid.RowSpan="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Height="auto" Width="auto" Name="txtDescription" Foreground="Black"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock Height="30" Width="auto" Margin="5" Name="txtProfitper" Foreground="Black"></TextBlock>
                <TextBlock Height="30" Width="auto" Margin="5" Name="txtOveral" Foreground="Black"></TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
