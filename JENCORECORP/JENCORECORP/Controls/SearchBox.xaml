<local:UserControlClass x:Class="JENCORECORP.SearchBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:JENCORECORP"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>            
        </Grid.RowDefinitions>        
        <!--<TextBox Grid.Row="0" Grid.Column="0" Text="Search"></TextBox>-->
        <local:WatermarkTextBox Watermark="Search" Grid.Row="0" Grid.Column="0" MinHeight="30" MinWidth="80" x:Name="txtSearchKey"></local:WatermarkTextBox>
        <Button Style="{StaticResource NoChromeButton}" Grid.Row="0" Grid.Column="1" Name="btnSearch">
            <Button.Background>
                <ImageBrush ImageSource="/JENCORECORP;component/Images/1394197791_about.png" />
            </Button.Background>
        </Button>
    </Grid>
</local:UserControlClass>
